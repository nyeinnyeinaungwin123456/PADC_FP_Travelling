<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.padc.travelling">

    <application
        android:name=".TravellingApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AttractionDetailActivity"
            android:label="@string/title_activity_attraction_detail">
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.SplashActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.HighWayDetailActivity"
            android:label="@string/title_activity_high_way_detail"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".activities.HotelDetailActivity"
            android:label="@string/title_activity_hotel_detail"
            android:theme="@style/AppTheme.NoActionBar"></activity>
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

    </application>

</manifest>