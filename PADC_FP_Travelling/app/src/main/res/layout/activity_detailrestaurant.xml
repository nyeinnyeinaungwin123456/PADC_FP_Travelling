<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.TourPackagePagerDetailActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_restaurantdetail"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <com.padc.travelling.components.MMTextView
                android:id="@+id/tv_restaurant_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:textSize="@dimen/screen_title_size"
                android:text="Mandalay"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white_full"/>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/small_margin"
        android:scrollbars="vertical">

        <ImageView
            android:id="@+id/iv_tourpackagedetail"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:src="@drawable/restaurantplaceholder"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:id="@+id/linear_restaurant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignBottom="@+id/iv_tourpackagedetail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="start"
            android:textAlignment="textStart"
            android:background="@android:color/holo_blue_dark"
            android:paddingLeft="@dimen/small_margin"
            android:paddingRight="@dimen/small_margin"
            android:paddingTop="@dimen/medium_margin"
            android:scrollbars="horizontal"
            android:weightSum="4">

            <com.padc.travelling.components.MMButton
                android:id="@+id/btn_plan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/addtoplan"
                android:textSize="@dimen/text_small"
                android:drawableTop="@drawable/ic_add_circle_outline_black_24dp"
                android:textColor="@color/white"
                android:background="@android:color/holo_blue_dark"/>

            <com.padc.travelling.components.MMButton
                android:id="@+id/btn_favourite"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/favourites"
                android:textSize="@dimen/text_small"
                android:drawableTop="@drawable/ic_favorite_border_black_24dp1"
                android:textColor="@color/white"
                android:background="@android:color/holo_blue_dark"/>

            <com.padc.travelling.components.MMButton
                android:id="@+id/btn_share"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/share"
                android:textSize="@dimen/text_small"
                android:drawableTop="@drawable/ic_share_black_24dp1"
                android:textColor="@color/white"
                android:background="@android:color/holo_blue_dark"/>

            <com.padc.travelling.components.MMButton
                android:id="@+id/btn_call"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/call"
                android:textSize="@dimen/text_small"
                android:drawableTop="@drawable/ic_settings_phone_black_24dp"
                android:textColor="@color/white"
                android:background="@android:color/holo_blue_dark"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_filter_1_black_24dp"
            android:layout_below="@+id/linear_restaurant"
            android:layout_marginTop="@dimen/fab_margin" />

        <com.padc.travelling.components.MMTextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price"
            android:layout_below="@+id/linear_restaurant"
            android:layout_toRightOf="@+id/iv_price"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginTop="@dimen/fab_margin"
            android:textColor="@color/blue"/>

        <ImageView
            android:id="@+id/iv_places"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_location_on_black_24dp"
            android:layout_below="@+id/iv_price"
            android:layout_marginTop="@dimen/fab_margin" />

        <com.padc.travelling.components.MMTextView
            android:id="@+id/tv_places"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/place"
            android:layout_toRightOf="@+id/iv_places"
            android:layout_below="@+id/iv_price"
            android:layout_marginTop="@dimen/fab_margin"
            android:paddingLeft="@dimen/medium_margin"
            android:textColor="@color/blue"/>

        <ImageView
            android:id="@+id/iv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_event_note_black_24dp"
            android:layout_below="@+id/iv_places"
            android:layout_marginTop="@dimen/fab_margin"/>

        <com.padc.travelling.components.MMTextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:textColor="@color/blue"
            android:layout_toRightOf="@+id/iv_address"
            android:layout_below="@+id/tv_places"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/fab_margin"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginLeft="@dimen/medium_margin"/>

        <ImageView
            android:id="@+id/iv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_event_note_black_24dp"
            android:layout_below="@+id/iv_address"
            android:layout_marginTop="@dimen/fab_margin"/>

        <com.padc.travelling.components.MMTextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:textColor="@color/blue"
            android:layout_toRightOf="@+id/iv_time"
            android:layout_below="@+id/iv_address"
            android:layout_marginTop="@dimen/fab_margin"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginLeft="@dimen/medium_margin"/>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_below="@+id/iv_time"
            android:background="@color/primary_light"/>

        <com.padc.travelling.components.MMTextView
            android:id="@+id/tv_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginTop="@dimen/fab_margin"
            android:textColor="@color/text_black_ish"
            android:gravity="center_horizontal"
            android:text="Rate this app"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_rate"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/medium_margin">

        <RatingBar
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:isIndicator="true"
            android:backgroundTintMode="add"
            android:gravity="center_horizontal"
            android:layout_toRightOf="@+id/iv_restaturant"
            android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>

    </android.support.design.widget.CoordinatorLayout>