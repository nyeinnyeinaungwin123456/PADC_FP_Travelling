<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context="com.padc.travelling.activities.HotelDetailActivity">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar_highway"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_backdrop_height"
            android:fitsSystemWindows="true"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar_highway"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleMarginEnd="@dimen/margin_medium_2"
                app:expandedTitleMarginStart="@dimen/margin_medium_2"
                app:collapsedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
                app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:id="@+id/iv_highway_image_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    android:src="@drawable/express" />

                <!--<android.support.v4.view.ViewPager
                    android:id="@+id/pager_hotel_images"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax"
                    />

                <com.padc.travelling.components.PageIndicatorView
                    android:id="@+id/pi_hotel_image_slider"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/margin_medium_2"/>-->

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_highway"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >
                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/margin_medium_2">

                <ImageView
                    android:id="@+id/iv_location_icon_highway"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingTop="@dimen/margin_small"
                    android:paddingBottom="@dimen/margin_small"
                    android:src="@drawable/ic_home_black_24dp"
                    />

                <com.padc.travelling.components.MMTextView
                    android:id="@+id/tv_highway_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kabar Aye Pagoda Rd, Yangon"
                    android:textColor="@color/text_black_ish"
                    android:paddingTop="@dimen/margin_small"
                    android:paddingBottom="@dimen/margin_small"
                    android:textSize="@dimen/text_regular"
                    android:paddingLeft="8dp"
                    android:layout_toRightOf="@id/iv_location_icon_highway"
                    />

                <ImageView
                    android:id="@+id/iv_phone_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingTop="@dimen/margin_small"
                    android:paddingBottom="@dimen/margin_small"
                    android:src="@drawable/ic_phone_black_24dp"
                    android:layout_below="@id/iv_location_icon_highway"
                    />

                <com.padc.travelling.components.MMTextView
                    android:id="@+id/tv_highway_detail_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="01 860 5377"
                    android:textColor="@color/text_black_ish"
                    android:paddingTop="@dimen/margin_small"
                    android:paddingBottom="@dimen/margin_small"
                    android:textSize="@dimen/text_regular"
                    android:layout_toRightOf="@id/iv_phone_icon"
                    android:layout_below="@id/tv_highway_address"
                    />

                <View
                    android:id="@+id/view_line"
                    android:layout_width="400dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_below="@id/iv_phone_icon"
                    android:background="@color/divider"/>

                <com.padc.travelling.components.MMTextView
                    android:id="@+id/tv_available_paths"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available Paths"
                    android:layout_below="@id/view_line"
                    android:paddingTop="@dimen/margin_medium"
                    android:paddingBottom="@dimen/margin_medium"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_paths"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:layout_below="@id/tv_available_paths"
                    android:scrollbarStyle="insideInset" />

            </RelativeLayout>

        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_highway_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:tint="@color/icons"
            app:layout_anchor="@id/appbar_highway"
            app:layout_anchorGravity="bottom|end|right"
            android:src="@drawable/ic_favorite_black_24dp" />

    </android.support.design.widget.CoordinatorLayout>
