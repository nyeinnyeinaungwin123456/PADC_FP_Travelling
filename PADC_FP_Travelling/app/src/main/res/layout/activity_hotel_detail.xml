<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.padc.travelling.activities.HotelDetailActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_hotel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_backdrop_height"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_hotel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginEnd="@dimen/margin_medium_2"
            app:expandedTitleMarginStart="@dimen/margin_medium_2"
            app:collapsedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <android.support.v4.view.ViewPager
                android:id="@+id/pager_hotel_images"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"
                />

            <com.padc.travelling.components.PageIndicatorView
                android:id="@+id/pi_hotel_image_slider"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/margin_medium_2"/>


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_hotel"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                android:background="@android:color/transparent"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_medium_2">

            <ImageView
                android:id="@+id/iv_location_icon_hotel_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                android:src="@drawable/ic_home_black_24dp"
                />

            <com.padc.travelling.components.MMTextView
                android:id="@+id/tv_hotel_detail_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kabar Aye Pagoda Rd, Yangon"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                android:textColor="@color/text_black_ish"
                android:textSize="@dimen/text_regular"
                android:paddingLeft="8dp"
                android:layout_toRightOf="@id/iv_location_icon_hotel_detail"
                />

            <ImageView
                android:id="@+id/iv_phone_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                android:paddingLeft="8dp"
                android:src="@drawable/ic_phone_black_24dp"
                android:layout_below="@id/iv_location_icon_hotel_detail"
                />

            <com.padc.travelling.components.MMTextView
                android:id="@+id/tv_hotel_detail_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="01 860 5377"
                android:textColor="@color/text_black_ish"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                android:textSize="@dimen/text_regular"
                android:layout_toRightOf="@id/iv_phone_icon"
                android:layout_below="@id/tv_hotel_detail_address"
                />

            <com.padc.travelling.components.MMButton
                android:id="@+id/btn_hotel_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search in Map"
                android:textSize="@dimen/button_text_size"
                android:layout_below="@id/tv_hotel_detail_phone"
                android:layout_marginLeft="32dp"/>

            <com.padc.travelling.components.MMTextView
                android:id="@+id/tv_hotel_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hotel_desc"
                android:textColor="@color/primary_text"
                android:layout_below="@id/btn_hotel_map"
                android:layout_marginTop="@dimen/margin_small"
                android:fontFamily="sans-serif-light"
                android:lineSpacingMultiplier="1.2"
                android:textSize="@dimen/text_regular_2x"
                />

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_hotel_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_favorite_black_24dp"
        android:tint="@color/icons"
        app:layout_anchor="@id/appbar_hotel"
        app:layout_anchorGravity="bottom|end|right" />

</android.support.design.widget.CoordinatorLayout>
