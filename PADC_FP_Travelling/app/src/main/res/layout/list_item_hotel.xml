<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_medium">

    <ImageView
        android:id="@+id/iv_hotel_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/sedona_hotel_mandalay"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/tv_hotel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sedona Hotel Yangon"
        android:textColor="@color/text_black_ish"
        android:textSize="@dimen/text_regular_2x"
        android:layout_toRightOf="@id/iv_hotel_image"
        android:textStyle="bold"
        android:paddingLeft="8dp"
        />

    <RelativeLayout
        android:id="@+id/rl_address"
        android:layout_toRightOf="@id/iv_hotel_image"
        android:layout_below="@id/tv_hotel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_location_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:src="@drawable/ic_home_black_24dp"
            />

        <TextView
            android:id="@+id/tv_hotel_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kabar Aye Pagoda Rd, Yangon"
            android:textColor="@color/text_black_ish"
            android:textSize="@dimen/text_regular"
            android:paddingLeft="8dp"
            android:layout_toRightOf="@id/iv_location_icon"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_hotel_image"
        android:layout_below="@id/rl_address"
        >

        <ImageView
            android:id="@+id/iv_phone_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:src="@drawable/ic_phone_black_24dp"
            />

        <TextView
            android:id="@+id/tv_hotel_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="01 860 5377"
            android:textColor="@color/text_black_ish"
            android:textSize="@dimen/text_regular"
            android:layout_toRightOf="@id/iv_phone_icon"
            />
    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_below="@id/iv_hotel_image"
        android:background="@color/text_black_ish"/>

</RelativeLayout>

