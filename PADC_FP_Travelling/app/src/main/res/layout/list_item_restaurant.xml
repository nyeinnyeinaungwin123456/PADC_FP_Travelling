<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_restaurant"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/small_margin"
    card_view:cardElevation="@dimen/card_elevation"
    card_view:cardUseCompatPadding="true">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/medium_margin">

    <ImageView
        android:id="@+id/iv_restaturant"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginRight="@dimen/small_margin"
        android:src="@drawable/restaurantplaceholder"
        android:adjustViewBounds="true"/>

    <com.padc.travelling.components.MMTextView
        android:id="@+id/tv_restaturantname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sule Shangrela"
        android:layout_toRightOf="@+id/iv_restaturant"
        android:layout_marginTop="@dimen/fab_margin"
        android:textColor="@color/text_black_ish"
        android:maxLines="1"/>

    <ImageView
        android:id="@+id/iv_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_vert_black_24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:foregroundGravity="right"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/fab_margin" />

    <com.padc.travelling.components.MMTextView
        android:id="@+id/tv_restaturantprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5000 MMK"
        android:layout_toRightOf="@+id/iv_restaturant"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_below="@+id/tv_restaturantname"
        android:textColor="@color/text_black_ish"
        android:maxLines="1"/>

    <!--<RatingBar-->
        <!--android:id="@+id/rating"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--style="?android:attr/ratingBarStyleSmall"-->
        <!--android:numStars="5"-->
        <!--android:stepSize="0.1"-->
        <!--android:isIndicator="true"-->
        <!--android:backgroundTintMode="add"-->
        <!--android:layout_below="@+id/tv_restaturantname"-->
        <!--android:layout_toRightOf="@+id/iv_restaturant"-->
        <!--android:layout_marginTop="@dimen/fab_margin" />-->

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/iv_restaturant"
        />

</RelativeLayout>
    </android.support.v7.widget.CardView>